<%- include('includes/head.ejs') %>
<link rel='stylesheet' href='stylesheets/loginStyle.css' />
</head>
<body>
<header></header>
<main>
    <div class="container text-white">
        <div class="d-flex justify-content-center h-100 position-absolute top-50 start-50 translate-middle">
            <div class="card text-center">
                <div class="card-header">
                    <div class="text-center mb-4">
                        <h1>SPACEBOOK</h1>
                        <h3>REGISTER - PASSWORDS</h3>
                        <% if (error) { %>
                            <div class="passwords-error-message text-danger text-center mb-3 fs-6 mt-2"> <%= error %>! <br> please try again </div>
                        <% } %>
                    </div>
                </div>
                <div class="card-main">
                    <form action="/" method="post">
                        <fieldset>
                            <div class="d-none">
                                <input type="text" class="form-control" id="username-hidden" autocomplete="username-hidden">
                            </div>
                            <div class="row mb-3 d-flex justify-content-center">
                                <div class="col-10 text center">
                                    <input type="password" class="form-control text-center" id="password" name="password"
                                           pattern="{3,32}" placeholder="Password"
                                           title="number of characters are not in range! max 32, min 3." autocomplete="new-password" required>
                                </div>
                            </div>
                            <div class="row mb-3 d-flex justify-content-center">
                                <div class="col-10">
                                    <input type="password" class="form-control text-center" id="confirm-password"
                                           name="confirmPassword" autocomplete="new-password"  placeholder="confirm-password" required>
                                </div>
                            </div>
                            <div class="mx-auto">
                                <a class="btn btn-outline-light mb-2" href="/register" role="button">Back</a>
                                <button class="btn btn-outline-warning mb-2" type="submit" id="registerButton">Register</button>
                            </div>
                        </fieldset>
                    </form>
                </div>
                <div class="card-footer">
                    <div class="mt-3"> already registered?  <a href="/" id="signInLink">SIGN IN</a> </div>
                </div>
            </div>
        </div>
    </div>
</main>
<footer></footer>
</body>
<%- include('includes/end.ejs') %>
