<%- include('includes/head.ejs') %>
<link rel='stylesheet' href='stylesheets/loginStyle.css' />
</head>
<body>
<header></header>
<main>
    <div class="container text-white">
        <div class="d-flex justify-content-center h-100 position-absolute top-50 start-50 translate-middle">
            <div class="card text-center">
                <div class="card-header">
                    <div class="text-center">
                        <h1>SPACEBOOK</h1>
                        <h3>REGISTER</h3>
                        <% if (error) { %>
                            <div class="passwords-error-message text-danger mb-3 fs-6"> <%= error %>! <br> please try again </div>
                        <% } %>
                    </div>
                </div>
                <div class="card-main">
                    <form action="/register-passwords" method="post">
                        <div class="row mb-3 d-flex justify-content-center">
                            <div class="col-10 text center">
                                <input type="email" class="form-control text-center" id="userEmail" name="email" aria-describedby="emailHelp"
                                       value="<%= email || '' %>" placeholder="Email address" required>
                            </div>
                        </div>
                        <div class="row mb-3 d-flex justify-content-center">
                            <div class="col-10">
                                <input type="text" class="form-control col-sm-3 text-center" id="userFirstName"
                                       pattern="[a-zA-Z]{3,32}" name="firstName" placeholder="First name"
                                       title="Only letters are allowed, max 32, min 3." value="<%= firstName || '' %>" required
                                       oninvalid="this.setCustomValidity('Only letters are allowed, max 32, min 3.')">
                            </div>
                        </div>
                        <div class="row mb-3 d-flex justify-content-center">
                            <div class="col-10">
                                <input type="text" class="form-control col-sm-3 text-center" id="userLastName"  placeholder="Last name"
                                       pattern="[a-zA-Z]{3,32}" name="lastName" title="Only letters are allowed, max 32, min 3."
                                       value="<%= lastName || '' %>" required
                                       oninvalid="this.setCustomValidity('Only letters are allowed, max 32, min 3.')">
                            </div>
                        </div>
                        <div class="d-grid col-md-5 mx-auto">
                            <button type="submit" class="btn btn-outline-warning">Next</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer">
                    <div class="mt-3"> already registered? go to <a href="/" id="signInLink">login</a> page</div>
                </div>
            </div>
        </div>
    </div>
</main>